source 'https://github.com/CocoaPods/Specs.git'
platform :ios, '8.0'
use_frameworks!

# The main target
target 'GABoardGameGeek' do
    pod 'Alamofire', '~> 3.3'
    pod 'SWXMLHash', '~> 2.3'

    # The unit testing target
    target 'GABoardGameGeekTests' do
        inherit! :search_paths
        pod 'Quick', '~> 0.9'
        pod 'Nimble', '~> 4.0'
        pod 'OHHTTPStubs', '~> 5.0'
        pod 'OHHTTPStubs/Swift', '~> 5.0'
    end
end
